<div class="pk-splash-screen-compatibility-overlay">
  <label class="pk-splash-screen-not-supported"> Sorry! Your device is not yet Supported =[ </label>
  <label class="pk-splash-screen-not-landscape"> Width too Narrow!<br>Try turning your device or increasing the width!</label>
 </div>
<div class="pk-splash-screen" id="poker-splash-screen">

  <h1 class="pk-splash-screen-game-title">Poker Tower</h1>

  <div class="pk-splash-screen-gen-top">
    <form class="pk-splash-player-profile-form">
      <div class="pkss-player-current-profile">
        <div class="pk-splash-player-profile-label">Current Player Profile:</div>
        <img class="pkss-current-profile-icon" src="./assets/player_icons/0.jpg"></img>
        <span>
          <label>Name</label>
          <label>$Wealth</label>
        <span>
      </div>
      Enter Name:<input class="pk-splash-input-player-name" id="poker-splash-input-player-name" value="">
        <div class="pkss-icon-sel-cntr">
          {{#each partials.pokerIcons}}
            <img class="pkss-icon-sel-img" src="./assets/player_icons/{{this}}"></img>
          {{/each}}
        </div>
    </form>
    <form class="pk-splash-player-profile-form">
      <label class="pk-splash-player-profile-label">Create a table:</label>
      # Players:<input class="pk-splash-input-player-name" id="poker-splash-input-player-name" value="">
      <button type="button" id="poker-splash-screen-create-table-button">Click to Create Table</button>
    </form>
  </div>

