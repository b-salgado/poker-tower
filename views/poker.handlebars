<div class="pk-players-container-top" id="poker-players-container-top"></div>

<div class="pk-room-uuid-container">
  <label class="pk-room-uuid scalable-text" id="poker-room-uuid">Not in Room</label>
</div>

<div class="pk-room-pot-container">
  <label class="pk-room-pot scalable-text" id="poker-room-pot">0 ₪</label>
</div>

<div class="pk-players-container-bottom">
  <div class="pk-player-client" id="player0">
    <img class="pk-player-icon" src=""></img>
    <span class="pk-player-stat-container">
      <div class="pk-player-name-container">
        <label class="scalable-text poker-player-name"></label>
      </div>
      <div class="pk-player-wealth-container">
        <label class="scalable-text poker-player-wealth">0 ₪</label>
      </div>
    </span>
    <span class="pk-actions-container">
      <input id="poker-inputbox" class="pk-gui-bet-char-input"></input>
      <button class="pk-action" id="poker-call">CALL</botton>
      <button class="pk-action" id="poker-raise">RAISE</botton>
      <button class="pk-action" id="poker-fold">FOLD</botton>
      <button class="pk-action" id="poker-chat">CHAT</botton>
    </span>
  </div>
</div>
